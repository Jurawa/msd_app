.row.column
  %table.hover
    %thead
      %tr
        %th Reg no
        %th Birth year
        %th Gender
        %th
        %th
        %th
  
    %tbody
      - @patients.each do |patient|
        %tr
          %td= patient.reg_no
          %td= patient.birth_year
          %td= patient.gender
          %td= link_to 'Show', patient
          %td= link_to 'Edit', edit_patient_path(patient)
          %td= link_to 'Destroy', patient, :method => :delete, :data => { :confirm => 'Are you sure?' }

.row.column
  = link_to 'New Patient', new_patient_path, class: 'button'
